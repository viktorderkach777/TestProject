pipeline {


agent any 
  parameters {
        string(name: 'TestCategory', defaultValue: 'Login', description: 'Enter the testcategory')
    }

environment {

dotnet = '/usr/share/dotnet/dotnet'

}

stages {  

stage('Checkout') {

steps {

checkout scm


}

}

stage('Restore Packages') {

steps {

dir("awesome-project") {

sh "ls -la"

sh "pwd"

sh 'dotnet --info'

sh 'dotnet restore'

}

}

}

stage('DotNet Test') {

steps {

dir("awesome-project") {

sh "ls -la"

sh "pwd"
echo "${currentBuild.getBuildCauses('jenkins.branch.BranchEventCause')}"   
echo "${currentBuild.getBuildCauses('hudson.model.Cause$UserIdCause')}" 
sh 'dotnet --info'

  echo "${params.TestCategory}" 
}

}

}

  
  stage('Operation without SCM'){      
      steps{
        mail (to: 'viktorderkach777@gmail.com',
             subject: "Job '${env.JOB_NAME}' (${env.BUILD_NUMBER}) is waiting for input",
            body: "Please go to ${env.BUILD_URL}.");
      }
   }

stage('Example Deploy') {
            when {
                triggeredBy 'SCMTrigger'
            }
            steps {
                echo "============SCMTrigger==========================="
            }
        }


}

}
